# HTTP server
PORT=3030

# Redis connection (BullMQ)
REDIS_URL=redis://127.0.0.1:6379

# SQLite database path (relative or absolute)
SQLITE_PATH=

# WhatsApp client IDs to auto-start at boot (comma separated)
WA_CLIENT_IDS=

# LocalAuth sessions directory (optional). If empty, defaults to .wwebjs_auth
WWEBJS_DATA_PATH=
SESSIONS_DIR=

# Scheduler defaults
SCHEDULER_BASE_DELAY_MS=1000
SCHEDULER_MAX_ATTEMPTS=8

# Puppeteer/Chromium
# Set this to your local Chrome/Chromium to avoid big downloads
# macOS example: /Applications/Google Chrome.app/Contents/MacOS/Google Chrome
# Linux example: /usr/bin/google-chrome-stable
PUPPETEER_EXECUTABLE_PATH=
# Increase or disable (0) launch timeout (ms)
PUPPETEER_LAUNCH_TIMEOUT_MS=60000

# API authentication
API_KEY=
